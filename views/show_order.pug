extends layout

block content
    br
    h1 Customer Name : #{name}
    h5 Customer Contact : #{order.contact}
    p= order.product
    hr
    if user
        if user.id == order.name
            a.btn.btn-default(href='/orders/edit/'+order._id) Edit This Order
            a.btn.btn-danger.delete-article(href='#', data-id=order._id) Delete This Order
        
